{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "new-cap": 0,
        "consistent-return": 0,
        "no-param-reassign": 0,
        "comma-dangle": 0,
        "no-else-return": 0,
        "linebreak-style": 0,
        "curly": [
          "error",
          "multi-line"
        ],
        "max-len": [
          "error",
          { "code": 100 }
        ],
        "valid-jsdoc": [
            "error",
            {
              "requireReturn": true,
              "requireReturnType": true,
              "requireParamDescription": false,
              "requireReturnDescription": true
            }
          ],
          "require-jsdoc": [
            "error",
            {
              "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
              }
            }
          ]
    }
}